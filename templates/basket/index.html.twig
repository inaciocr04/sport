{% extends 'base.html.twig' %}

{% block title %}Basket index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/affichagecrud.css') }}" >
{% endblock %}


{% block body %}
    <h1>Basket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Sous Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.id }}</td>
                <td>{{ basket.nom }}</td>
                <td>{{ basket.soustitre }}</td>
                <td>{{ basket.description }}</td>
                <td>{{ basket.prix }}</td>
                <td><img class="image" src="{{ asset('uploads/'~basket.photo) }}" alt="{{ basket.nom }}">
                <td><img class="image" src="{{ asset('uploads/'~basket.photo2) }}" alt="{{ basket.nom }}">
                </td>
                <td>
                    <a href="{{ path('app_basket_show', {'id': basket.id}) }}">show</a>
                    <a href="{{ path('app_basket_edit', {'id': basket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_basket_new') }}">Create new</a>
{% endblock %}
