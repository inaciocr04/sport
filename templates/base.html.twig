<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/notyf@3.0.0/dist/notyf.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body id="root">
    <nav class="flex align-center">
        <div class="flex gape-10 logo align-center">
            <img class="logo" src="{{ asset('media/Nike-logo.png') }}" alt="logo nike">
            {#<p>Nooke</p>#}
        </div>
        <div class="flex gape-50">
            <a href="{{ path('home') }}">Accueil</a>
            <div class="dropdown">
                <p>Nos Chaussures </p>
                <div class="dropdown_content flex">
                    <a href="{{ path('baskets') }}">Toutes les chaussures</a>
                    <div class="flex categories">
                        {% for category in categories %}
                            <a href="{{ path('categorie', {id:category.id}) }}">{{ category.type }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_basket_new') }}">Nouvelle article</a>

            {% endif %}

        </div>
        <div class="flex gape-50 connection">
            {% if app.user %}
                <ul>
                    <li><strong>{{ app.user.email }}</strong></li>
                    <li><a href="{{ path('app_logout') }}">Logout</a></li>
                </ul>
            {% else %}
                <a class="flex align-center" href="{{ path('app_login') }}"><i class="bi bi-person-fill"></i>Connection</a>
            {% endif %}
            <a class="flex align-center gape-10" href="{{ path('panier') }}"><i class="bi bi-cart-fill"></i>Panier</a>
        </div>

    </nav>
        {% block body %}

        {% endblock %}
        {% block javascript %}
        {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/notyf@3.0.0/dist/notyf.min.js"></script>

    </body>
</html>
