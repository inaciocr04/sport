<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/notyf@3.0.0/dist/notyf.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />


        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body id="root">
    <nav class="flex align-center">
        <div class="flex gape-10 logo align-center">
            <img class="logo" src="{{ asset('media/Nike-logo.png') }}" alt="logo nike">
            {#<p>Nooke</p>#}
        </div>
        <div class="flex gape-50">
            <a href="{{ path('home') }}">Accueil</a>
            <div class="dropdown">
                <p>Nos Chaussures </p>
                <div class="dropdown_content flex">
                    <a href="{{ path('baskets') }}">Toutes les chaussures</a>
                    <div class="flex categories">
                        {% for category in categories %}
                            <a href="{{ path('categorie', {id:category.id}) }}">{{ category.type }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_basket_new') }}">Nouvelle article</a>

            {% endif %}

        </div>
        <div class="flex gape-50 connection">
            {% if app.user %}
                <ul>
                    <li><strong>{{ app.user.pseudo }}</strong></li>
                        <a class="Btn" href="{{ path('app_logout') }}">
                        <div class="sign"><svg viewBox="0 0 512 512"><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"></path></svg></div>
                        <div class="text">Logout</div>
                        </a>
                </ul>
            {% else %}
                <a class="flex align-center" href="{{ path('app_login') }}"><i class="bi bi-person-fill"></i>Connection</a>
                <a class="flex align-center" href="{{ path('app_register') }}"><i class="bi bi-person-fill"></i>Inscription</a>
            {% endif %}
            <a class="flex align-center gape-10" href="{{ path('panier') }}"><i class="bi bi-cart"></i>Panier{{ panierLength }}</a>
        </div>

    </nav>

    {% block body %}

    {% endblock %}
    <footer>
        <div>
            <ul>
                <h5>Informations</h5>
                <li>Mentions Légals</li>
                <li>Conditions d'utilisations</li>
                <li>A propos</li>
            </ul>
        </div>
        <div>
            <h5>Rester chez nous</h5>
            <button>S'inscrire</button>
        </div>
        <div>
            <h5>Réseaux sociaux</h5>
            <ul>
                <li><a href="#"><i class="bi bi-instagram"></i></a></li>
                <li><a href="#"><i class="bi bi-facebook"></i></a></li>
                <li><a href="#"><i class="bi bi-twitter-x"></i></a></li>
                <li><a href="#"><i class="bi bi-tiktok"></i></a></li>

            </ul>

        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="{{ asset('js/app.js') }}"></script>
    <script src="{{ asset('node_modules/toastify-js/src/toastify.js') }}"></script>


    </body>
</html>
