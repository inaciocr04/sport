{% extends 'admin.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block controller %}
    <h1>Panier index</h1>

    <table class="table margin-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom user</th>
                <th>Nom Basket</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.id }}</td>
                <td>{{ panier.user.pseudo }}</td>
                <td>{{ panier.basket.nom }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_panier_new') }}">Create new</a>
{% endblock %}
