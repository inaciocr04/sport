{% extends 'admin.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block controller %}
    <h1>Commentaire index</h1>

    <table class="table margin-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.commentaire }}</td>
                <td>{{ commentaire.note }}</td>
                <td >
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                    {{ include('commentaire/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new_admin') }}">Create new</a>
{% endblock %}
